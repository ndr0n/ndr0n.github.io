@code{
    [CascadingParameter]
    MainLayout MainPage { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        MainPage.Page = MainLayout.Pages.Videos;
        MainPage.Refresh();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await MainPage.SetCanvas(MainLayout.Canvas.Background);
        }
    }
}