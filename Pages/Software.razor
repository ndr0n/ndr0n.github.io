@page "/Software"

<MudGrid>
    <MudItem lg="6" md="12" Style="background:#222f; min-height: 90vh; height: 90vh; min-width: 50%; padding: 1%; overflow-x: hidden; overflow-y: scroll;">
        <MudGrid>
            <GithubLink Title="Glome" Link="ndr0n/Glome" Description="Machine Learning Improviser VST3 Audio Effect"/>
            <br/>
            <GithubLink Title="Freez" Link="ndr0n/Freez" Description="Looper / Freeze / Delay VST3 Audio Effect"/>
        </MudGrid>
    </MudItem>
</MudGrid>

@code{
    [CascadingParameter]
    MainLayout MainPage { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        MainPage.Page = MainLayout.Pages.Software;
        MainPage.Refresh();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await MainPage.SetCanvas(MainLayout.Canvas.Background);
        }
    }
}