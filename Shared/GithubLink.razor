<MudGrid Style="padding: 1%; margin: 0">
    <MudItem xs="12" Style="padding: 1%; margin: 0">
        <center>
            <MudLink Href=@($"https://github.com/{Link}") Typo="Typo.h6">@Title</MudLink>
            <br/>
            <MudLink Href=@($"https://github.com/{Link}")>
                <MudImage Style="width: 30vh; height: 20vh;" Src=@($"https://raw.githubusercontent.com/{Link}/master/{Title}.png")></MudImage>
            </MudLink>
            <br/>
            <MudText Typo="Typo.body2">@Description</MudText>
        </center>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Link { get; set; }
    [Parameter]
    public string Description { get; set; }
}